<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imagen_inicio"
        android:layout_width="163dp"
        android:layout_height="177dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_portada_2"
        app:srcCompat="@drawable/proceso" />

    <TextView
        android:id="@+id/titulo_portada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Bienvenidos al tutorial"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titulo_portada_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="de"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/titulo_portada"
        app:layout_constraintStart_toStartOf="@+id/titulo_portada"
        app:layout_constraintTop_toBottomOf="@+id/titulo_portada" />

    <TextView
        android:id="@+id/titulo_portada_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Manejo del algoritmo Round Robin"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/titulo_portada_1"
        app:layout_constraintStart_toStartOf="@+id/titulo_portada_1"
        app:layout_constraintTop_toBottomOf="@+id/titulo_portada_1" />

    <Button
        android:id="@+id/boton_comenzar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:text="Comenzar tutorial"
        android:textColorLink="#0E44E2"
        app:backgroundTint="#0E44E2"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/imagen_inicio"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_portada_2" />

    <ImageView
        android:id="@+id/imagen_inicio_1"
        android:layout_width="277dp"
        android:layout_height="309dp"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagen_inicio"
        app:srcCompat="@drawable/multiprocesos" />
</androidx.constraintlayout.widget.ConstraintLayout>