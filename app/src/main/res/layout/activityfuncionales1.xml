<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_color_amarillo"
    tools:context=".activityFuncionales1">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simulación Round Robin"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etQuantum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Quantum"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        app:layout_constraintWidth_percent="1" />

    <EditText
        android:id="@+id/etNombreProceso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre del Proceso"
        app:layout_constraintTop_toBottomOf="@+id/etQuantum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="1" />

    <EditText
        android:id="@+id/etTiempoLlegada"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tiempo de Llegada"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/etNombreProceso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="1" />

    <EditText
        android:id="@+id/etRafaga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ráfaga"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/etTiempoLlegada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="1"
        android:fitsSystemWindows="true"/>

    <Spinner
        android:id="@+id/spinnerColorProceso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRafaga"
        app:layout_constraintWidth_percent="1" />

    <Button
        android:id="@+id/btnAnadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#8BED51"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Añadir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerColorProceso"
        app:layout_constraintVertical_bias="0.04" />

    <!-- RecyclerView para mostrar la lista de procesos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProcesos"
        android:layout_width="384dp"
        android:layout_height="283dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAnadir"
        app:layout_constraintWidth_percent="1" />

    <Button
        android:id="@+id/btnSimularAhora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#333333"
        android:textStyle="bold"
        android:text="Simular Ahora"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewProcesos" />

</androidx.constraintlayout.widget.ConstraintLayout>
